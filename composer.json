{
  "name": "resilience4u/r4telemetry",
  "description": "Thin bootstrap + facade for OpenTelemetry PHP SDK (traces first).",
  "type": "library",
  "license": "Apache-2.0",
  "require": {
    "php": ">=8.1",
    "open-telemetry/api": "^1.0",
    "open-telemetry/sdk": "^1.0",
    "open-telemetry/exporter-otlp": "^1.0",
    "open-telemetry/sem-conv": "^1.0",
    "symfony/http-client": "^7.3",
    "nyholm/psr7": "^1.8"
  },
  "autoload": {
    "psr-4": {
      "R4Telemetry\\": "src/R4Telemetry/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "tbachert/spi": true
    }
  }
}
